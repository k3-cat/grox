{
	"name": "grox",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --outdir dist --upload-source-maps --var SENTRY_RELEASE:$(sentry-cli releases propose-version)",
		"cf-typegen": "wrangler types ./types/worker-configuration.d.ts --env-interface CloudflareBindings",
		"gql-generate": "graphql-codegen",
		"sentry:sourcemaps": "_SENTRY_RELEASE=$(sentry-cli releases propose-version) && sentry-cli releases new $_SENTRY_RELEASE --org=3c6 --project=grox && sentry-cli sourcemaps upload --org=3c6 --project=grox --release=$_SENTRY_RELEASE --strip-prefix 'dist\\..' dist",
		"postdeploy": "pnpm sentry:sourcemaps"
	},
	"dependencies": {
		"@apollo/client": "^3.13.9",
		"@sentry/cloudflare": "^10.5.0",
		"hono": "^4.9.2",
		"http-enums": "^1.0.5",
		"jose": "^6.0.12",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250816.0",
		"@graphql-codegen/cli": "^5.0.7",
		"@graphql-codegen/client-preset": "^4.8.3",
		"@graphql-codegen/typescript": "^4.1.6",
		"@graphql-codegen/typescript-operations": "^4.6.1",
		"@graphql-typed-document-node/core": "^3.2.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.6.2",
		"@sentry/cli": "^2.52.0",
		"graphql": "^16.11.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"wrangler": "^4.30.0"
	}
}
